@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" type="text/css" href="css/estilo-paginas.css">
    <!--  CSS do Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Principal CSS do Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos customizados para esse template -->
    <link href="css/floating-labels-cadastro.css" rel="stylesheet">

    <script src="js/login.js" defer></script>
</head>

<form class="form-signin" asp-controller="Login" asp-action="Entrar">
    <div class="text-center mb-4">

        <h1 class="h3 mb-3 font-weight-normal">LOGIN</h1>
    </div>

    <div>
        <label for="inputEmail">Endereço de email</label>
        <input type="text" asp-for="Email" id="inputEmail" class="form-control" placeholder="Endereço de email" />
        @Html.ValidationMessageFor(x => x.Email)
        
    </div>

    <div>
        <label for=>Senha</label>
        <input type="password" asp-for="Senha" id="inputPassword" class="form-control" placeholder="Senha"/>
        @Html.ValidationMessageFor(x => x.Senha)
        
    </div>
    <p class="mt-5 mb-3 text-muted text-center">&copy; <a asp-controller="Cadastro" asp-action="Index">Não tem uma conta? Cadastre-se</a></p>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
</form>