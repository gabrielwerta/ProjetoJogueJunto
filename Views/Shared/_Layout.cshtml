<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - JogueJunto</title>
    <link rel="stylesheet" type="text/css" href="css/pagina-escolha.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!--script-menu lateral-->
    <script src="js/menu.js" defer></script>

</head>
<body>
    <!-- Menu fixo antes do login -->

    <header id="header-menu">
        <nav class="menu-lateral">
            <div class="btn-expandir">
                <i class="bi bi-list" id="btn-exp"></i>
            </div> <!--btn--expandir-->
            <ul>
                <li class="item-menu ativo">
                    <a id="botao-home" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="icone"><i class="bi bi-house"></i></span>
                        <span class="txt-link">Home</span>
                    </a>
                </li>

                <li class="item-menu">
                    <a id="botao-login" asp-area="" asp-controller="Login" asp-action="Index">

                        <span class="icone"><i class="bi bi-box-arrow-right"></i></span>
                        <span class="txt-link">Login</span>
                    </a>
                </li>

                <li class="item-menu">
                    <a id="botao-cadastro" asp-area="" asp-controller="Cadastro" asp-action="Index">
                        <span class="icone"><i class="bi bi-nut"></i></span>
                        <span class="txt-link">Cadastro</span>
                    </a>
                </li>

                <li class="item-menu">
                    <a href="desevolv.html" target="_blank">

                        <span class="icone"><i class="bi bi-vignette"></i></span>
                        <span class="txt-link">Desenvolvedores</span>
                    </a>
                </li>
                <li class="item-menu">
                    <a id="bota-historia" asp-area="" asp-controller="Historia" asp-action="Index">
                        <span class="icone"><i class="bi bi-clock-history"></i></span>
                        <span class="txt-link">Historia</span>
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
</body>
</html>